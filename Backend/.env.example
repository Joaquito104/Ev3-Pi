# ==============================================
# DJANGO CORE
# ==============================================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_50_CHARS_MIN
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ==============================================
# POSTGRESQL DATABASE
# ==============================================
DB_NAME=ev3pi_production
DB_USER=ev3pi_user
PASSWORD=STRONG_PASSWORD_HERE_MIN_16_CHARS
DB_HOST=127.0.0.1
DB_PORT=5432
PGCLIENTENCODING=UTF8

# ==============================================
# MONGODB (Calificaciones)
# ==============================================
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=ev3pi_calificaciones
MONGODB_USER=mongo_user
MONGODB_PASSWORD=STRONG_MONGODB_PASSWORD_HERE
MONGODB_AUTH_SOURCE=admin
MONGODB_AUTH_MECHANISM=SCRAM-SHA-256
MONGODB_TLS=True
MONGODB_TLS_ALLOW_INVALID=False
# Para producción con certificado válido:
# MONGODB_TLS_CA_FILE=/path/to/ca-certificate.pem
# Para MongoDB Atlas (URI completa):
# Generar en: https://www.mongodb.com/cloud/atlas
# Reemplazar [USER], [PASSWORD], [CLUSTER] con valores reales
# MONGODB_URI=mongodb+srv://[USER]:[PASSWORD]@[CLUSTER].mongodb.net/[DBNAME]?retryWrites=true&w=majority  ESTO ES UN EJEMPLO

# ==============================================
# SECURITY (OWASP/NIST)
# ==============================================
# HTTPS Forzado (Producción)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# HSTS (HTTP Strict Transport Security)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# ==============================================
# FRONTEND URL
# ==============================================
FRONTEND_URL=https://your-domain.com

# ==============================================
# CORS (Permitir solo dominios autorizados)
# ==============================================
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ==============================================
# REDIS (Blacklist JWT - Opcional)
# ==============================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=redis_strong_password
